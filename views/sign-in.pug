extends layout

block content
  link(rel="stylesheet", href="/styles/form.css")
  form.count(method='POST' action='' novalidate autocomplete="off")
    h1.titleH1 Crea una cuenta 
    label.labelForm(for="name") Username:
    input#name.inputForm(type="text" name="name" required)
    label.labelForm(for="email") Email: 
    input#email.inputForm(type="email", name="email" required)
    label.labelForm(for="segurity") Paswoord: 
    input#password.inputForm(type="password", name="segurity" minlength="6" maxlength="12" required)
    label.labelForm(for="password") Again Password: 
    input#password2.inputForm(type="password", name="password" minlength="6" maxlength="12" required)
    button.btnSubmit.btn(type="submit") Submit

  if errors
    h1= errors.errors[0].msg

  script(src="/javascripts/form.js") 
